{

  "name": "remove-bot",

  "description": "Telegram bot that removes users with Russian alphabet in their names from a channel",

  "repository": "https://github.com/SPARKBRO/remove-bot.git",

  "logo": "https://i.imgur.com/RM2RuZZ.png",

  "addons": [

    {

      "plan": "heroku-postgresql",

      "as": "DATABASE",

      "options": {

        "version": "12"

      }

    },

    {

      "plan": "mongolab:sandbox",

      "as": "MONGODB"

    }

  ],

  "env": {

    "API_ID": {

      "description": "Telegram API ID",

      "value": ""

    },

    "API_HASH": {

      "description": "Telegram API hash",

      "value": ""

    },

    "BOT_TOKEN": {

      "description": "Telegram bot token",

      "value": ""

    },

    "DATABASE_URL": {

      "description": "URL of the PostgreSQL database",

      "value": {"from": "DATABASE", "select": "credentials.uri"}

    },

    "MONGO_URI": {

      "description": "URL of the MongoDB database",

      "value": {"from": "MONGODB", "select": "uri"}

    }

  },

  "buildpacks": [

    {

      "url": "heroku/python"

    }

  ]

}


 
    
  


      

    
 

    

  
  

